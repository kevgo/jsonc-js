{
  "name": "jsonc-reader",
  "version": "0.1.0",
  "description": "A simple reader for JSONC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kevgo/jsonc-js.git"
  },
  "license": "ISC",
  "author": "Kevin Goslar <kevin.goslar@gmail.com>",
  "type": "module",
  "main": "dist/jsonc.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "fix": "eslint --fix && prettier --write . && sort-package-json --quiet",
    "lint": "eslint && sort-package-json --check --quiet && prettier --list-different . && git diff --check",
    "setup": "yarn",
    "test": "npm run lint && npm run unit",
    "unit": "node --test --import tsx test/*.test.ts",
    "update": "yarn upgrade --latest"
  },
  "prettier": {
    "proseWrap": "always",
    "semi": false
  },
  "devDependencies": {
    "@eslint/js": "9.21.0",
    "@types/node": "22.13.5",
    "eslint": "9.21.0",
    "prettier": "3.5.2",
    "sort-package-json": "2.15.0",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "typescript-eslint": "8.25.0"
  }
}
