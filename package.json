{
  "name": "jsonc-reader",
  "version": "0.0.3",
  "description": "A simple reader for JSONC",
  "repository": "git@github.com:kevgo/jsonc-js.git",
  "license": "ISC",
  "author": "Kevin Goslar <kevin.goslar@gmail.com>",
  "main": "dist/jsonc.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p .",
    "clean": "rm -rf dist",
    "fix": "eslint . --fix --ext .ts && prettier --write . && sort-package-json",
    "lint": "eslint . --ext .ts && sort-package-json --check && prettier --check . && git diff --check",
    "setup": "yarn",
    "test": "npm run lint && npm run unit",
    "unit": "mocha 'test/*.test.ts'",
    "update": "yarn upgrade --latest"
  },
  "devDependencies": {
    "@types/mocha": "9.0.0",
    "@types/node": "16.10.3",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "eslint": "8.0.0",
    "mocha": "9.1.2",
    "prettier": "3.5.2",
    "sort-package-json": "1.57.0",
    "ts-node": "10.3.0",
    "typescript": "4.4.3"
  }
}
